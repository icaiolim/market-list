@model ProductList

@section Styles {
    <link href="~/css/ProductList/upsert.css" rel="stylesheet" />
    <link href="~/lib/chosen_v1.8.7/chosen.css" rel="stylesheet" />
}
<h1>@(Model.Id == 0 ? "Adicionar" : "Atualizar") Produto</h1>
<br />
<div class="container">
    <form method="post">
        <input type="hidden" asp-for="@Model.Id" />
        <input type="hidden" asp-for="@Model.IdMarketList" />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <label asp-for="@Model.IdProduct">Produto</label>
            <select id="IdProduct" class="form-control" asp-for="@Model.IdProduct" asp-items="@ViewBag.Products" name="IdProduct">
                <option value="">Escolha uma opção</option>
            </select>
            <span asp-validation-for="@Model.IdProduct" class="text-danger m-1"></span>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.Qty">Quantidade</label>
            <input asp-for="@Model.Qty" class="form-control" value="@(Model.Id == 0 ? 1 : Model.Qty)" min="1" />
            <span asp-validation-for="@Model.Qty" class="text-danger m-1"></span>
        </div>
        <div class="options">
            <input type="submit" value="@(Model.Id == 0 ? "Adicionar" : "Atualizar")" class="add" />
            <a href="/MarketList/Item/@Model.IdMarketList" target="_self" class="back">Voltar</a>
        </div>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/lib/chosen_v1.8.7/chosen.jquery.min.js"></script>
    <script src="~/js/ProductList/upsert.js"></script>
}
