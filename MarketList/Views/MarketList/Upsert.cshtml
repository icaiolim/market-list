@model MarketList

@section Styles {
    <link href="~/css/MarketList/upsert.css" rel="stylesheet" />
}

<div class="title">
    <h1>Listas de Compras</h1>
</div>
<div class="container">
    <form method="post">
        <input type="hidden" asp-for="@Model.Id" />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <label asp-for="@Model.Name">Nome</label>
            <input asp-for="@Model.Name" class="form-control" placeholder="Nome da sua lista de compras" />
            <span asp-validation-for="@Model.Name" class="text-danger m-1"></span>
        </div>
        <div class="options">
            <input type="submit" value="Adicionar" class="add" />
            <a href="/MarketList" target="_self" class="back">Voltar</a>
        </div>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}